<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="es.albarregas.beans.Direccion" table="direccion1a1">
        <id name="id" type="integer">
            <column name="idDirec"/>
            <generator class="identity"/>
        </id>
        <property name="calle">
            <column length="30" name="calle" not-null="true"/>
        </property>
        <property name="numero">
            <column name="numero" not-null="true"/>
        </property>
        <property name="poblacion">
            <column length="40" name="poblacion" not-null="true"/>
        </property>
        <property name="provincia">
            <column length="30" name="provincia" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
